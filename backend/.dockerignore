# Navigate to backend folder
cd backend

# Recreate the correct .dockerignore
cat > .dockerignore << 'EOF'
# Gradle cache and build output
.gradle/
build/
!build/libs/*.jar

# IDE files
.idea/
.vscode/
*.iml
*.ipr
*.iws
.project
.classpath
.settings/

# OS files
.DS_Store
Thumbs.db

# Logs
*.log

